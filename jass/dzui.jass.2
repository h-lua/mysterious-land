        call DzFrameSetScriptByCode(frame, 2, function H_DZUI_ATTR_WEAPON_IN, false ) //鼠标移入
        call DzFrameSetScriptByCode(frame, 3, function H_DZUI_ATTR_WEAPON_OUT, false ) //鼠标移出
    endif
